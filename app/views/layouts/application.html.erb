<!DOCTYPE html>
<html>
  <head>
    <title>UserRegistration</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  		<% if current_user.present? %>
			<div class='col-md-2' >
				<%=current_user.email%>
				<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> <br>
				<%= link_to "Home", root_path, :class => 'navbar-link'  %>
				
				<% if current_user.admin? %>
					| <%= link_to "Users", admin_users_path, :class => 'navbar-link'  %>
					| <%= link_to "Task", admin_tasks_path, :class => 'navbar-link' %>
					<% else %>
					| <%= link_to "Task", tasks_path, :class => 'navbar-link'  %>
				<% end %>

			</div>
		<% else %>
			<div class='col-md-2' >
				<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
				<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> <br>
				<%= link_to "Home", root_path, :class => 'navbar-link'  %>
			</div>
		<% end %>
    <%= yield %>
  </body>
</html>
